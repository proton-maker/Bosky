<odoo>
    <data>
        <!-- Form view -->
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">online_store.order.form</field>
            <field name="model">online_store.order</field>
            <field name="arch" type="xml">
                <form string="Order">
                    <sheet>
                        <group>
                            <field name="customer_name"/>
                            <field name="order_date"/>
                            <field name="product_ids"/>
                            <field name="total_amount" readonly="1"/>  <!-- Total amount -->
                            <field name="payment_status"/>  <!-- Payment status -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="view_order_tree" model="ir.ui.view">
            <field name="name">online_store.order.tree</field>
            <field name="model">online_store.order</field>
            <field name="arch" type="xml">
                <tree string="Order">
                    <field name="customer_name"/>
                    <field name="order_date"/>
                    <field name="total_amount" readonly="1"/>  <!-- Total amount -->
                    <field name="payment_status"/>  <!-- Payment status -->
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_order" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="res_model">online_store.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item -->
        <menuitem id="menu_order" name="Orders" parent="menu_online_store_root" action="action_order" sequence="30"/>
    </data>
</odoo>
