<odoo>
    <data>
        <record id="order_email_template" model="mail.template">
            <field name="name">Order Notification</field>
            <field name="model_id" ref="bosky_store.model_bosky_store_order"/>
            <field name="subject">Order Confirmation</field>
            <field name="email_from">${(user.email or 'noreply@example.com')}</field>
            <field name="email_to">${object.email}</field>
            <field name="body_html"><![CDATA[
                <p>Hello ${object.customer_name},</p>
                <p>Your order has been confirmed.</p>
                <p>Order Details:</p>
                <p>Order Reference: ${object.name}</p>
                <p>Total Amount: ${object.total_amount}</p>
            ]]></field>
        </record>
    </data>
</odoo>
