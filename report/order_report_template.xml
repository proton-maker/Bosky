<odoo>
    <template id="report_order_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <h2>Order Report</h2>
                    <p>Order Reference: <t t-esc="o.name"/></p>
                    <p>Customer Name: <t t-esc="o.customer_name"/></p>
                    <p>Order Date: <t t-esc="o.order_date"/></p>
                    <p>Total Amount: <t t-esc="o.total_amount"/></p>
                    <p>Payment Status: <t t-esc="o.payment_status"/></p>
                    <p>Products:</p>
                    <ul>
                        <t t-foreach="o.product_ids" t-as="product">
                            <li><t t-esc="product.name"/></li>
                        </t>
                    </ul>
                </div>
            </t>
        </t>
    </template>
</odoo>
