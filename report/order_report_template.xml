<odoo>
    <data>
        <template id="report_order_document">
            <t t-call="web.basic_layout">
                <div class="page">
                    <h2>Order Report</h2>
                    <p>Order Reference: <span t-field="doc.name"/></p>
                    <p>Customer Name: <span t-field="doc.customer_name"/></p>
                    <p>Order Date: <span t-field="doc.order_date"/></p>
                    <p>Total Amount: <span t-field="doc.total_amount"/></p>
                    <p>Payment Status: <span t-field="doc.payment_status"/></p>
                </div>
            </t>
        </template>
    </data>
</odoo>
