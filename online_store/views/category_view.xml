<odoo>
    <data>
        <!-- Form view -->
        <record id="view_category_form" model="ir.ui.view">
            <field name="name">online_store.category.form</field>
            <field name="model">online_store.category</field>
            <field name="arch" type="xml">
                <form string="Category">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="product_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="view_category_tree" model="ir.ui.view">
            <field name="name">online_store.category.tree</field>
            <field name="model">online_store.category</field>
            <field name="arch" type="xml">
                <tree string="Category">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_category" model="ir.actions.act_window">
            <field name="name">Categories</field>
            <field name="res_model">online_store.category</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item -->
        <menuitem id="menu_category" name="Categories" parent="menu_online_store_root" action="action_category" sequence="20"/>
    </data>
</odoo>
