<odoo>
    <data>
        <!-- Form view -->
        <record id="view_product_form" model="ir.ui.view">
            <field name="name">online_store.product.form</field>
            <field name="model">online_store.product</field>
            <field name="arch" type="xml">
                <form string="Product">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="price"/>
                            <field name="category_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="view_product_tree" model="ir.ui.view">
            <field name="name">online_store.product.tree</field>
            <field name="model">online_store.product</field>
            <field name="arch" type="xml">
                <tree string="Product">
                    <field name="name"/>
                    <field name="price"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_product" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">online_store.product</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu item -->
        <menuitem id="menu_online_store_root" name="Online Store" sequence="10"/>
        <menuitem id="menu_product" name="Products" parent="menu_online_store_root" action="action_product" sequence="10"/>
    </data>
</odoo>
